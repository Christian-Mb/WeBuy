<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Main3Activity"
    tools:showIn="@layout/password_fragment"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                style="@style/headerTextPrimary"
                android:text="Edit password"
                android:layout_marginBottom="20dp"/>

            <RelativeLayout style="@style/profileDetailsLayout">
                <ImageView
                    android:id="@+id/nameImageView"
                    android:src="@drawable/ic_edit_password"
                    style="@style/profileDetailsImage" />

                <TextView
                    android:id="@+id/currentPassword"
                    android:text="Current password"
                    android:layout_toRightOf="@id/nameImageView"
                style="@style/profileDetailsTextMain" />

                <EditText
                    android:hint="Type your password"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/nameImageView"
                    style="@style/profileDetailsMiniText" />

            </RelativeLayout>

            <View style="@style/proifleDetailsView" />
            <RelativeLayout style="@style/profileDetailsLayout">
                <ImageView
                    android:id="@+id/mobileImageView"
                    android:src="@drawable/ic_new_password"
                    style="@style/profileDetailsImage" />

                <TextView
                    android:text="New password"
                    android:layout_toRightOf="@id/mobileImageView"
                    style="@style/profileDetailsTextMain"/>

                <EditText
                    android:layout_marginTop="10dp"
                    android:hint="Type the new password"
                    android:layout_toRightOf="@id/mobileImageView"
                    style="@style/profileDetailsMiniText" />

            </RelativeLayout>



            <View style="@style/proifleDetailsView" />

            <RelativeLayout style="@style/profileDetailsLayout">
                <ImageView
                    android:id="@+id/mobileImageView2"
                    android:src="@drawable/ic_new_password"
                    style="@style/profileDetailsImage" />

                <TextView
                    android:text="Confirm password"
                    android:layout_toRightOf="@id/mobileImageView2"
                    style="@style/profileDetailsTextMain"/>

                <EditText
                    android:layout_marginTop="10dp"
                    android:hint="Confirm your new password"
                    android:layout_toRightOf="@id/mobileImageView2"
                    style="@style/profileDetailsMiniText" />

            </RelativeLayout>



            <View style="@style/proifleDetailsView" />

            <LinearLayout
              style="@style/linearParent"
                >

                <Button
                    android:id="@+id/btnSave"
                    style="@style/loginButton"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"

                    android:layout_marginTop="@dimen/loginViewsMargin"

                    android:text="Save" />
            </LinearLayout>

        </LinearLayout>


</androidx.core.widget.NestedScrollView>
