<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="20dp"
    android:minWidth="300dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/trendsThumbnail"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:src="@drawable/fashion_trends_sample" />

        <TextView
            android:id="@+id/trendsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/trendsThumbnail"
            android:maxLines="2"
            android:text="30% of reduction \none the 2 shopping"
            android:textColor="#676767"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:layout_below="@id/trendsTitle"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/trendsThumbnail"
            android:background="#676767" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trendsTitle"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/trendsThumbnail"
            android:maxLines="2"
            android:text="Top Trends \nfor Wedding"
            android:textColor="@color/darkTextColor"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>